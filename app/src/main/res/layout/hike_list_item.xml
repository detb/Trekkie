<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hikecontainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <ImageView
        android:id="@+id/hike_picture"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@color/secondaryColor"
        />

    <TextView
        android:id="@+id/hike_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Name and date of hike"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hike_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="description of hike"
        android:textSize="12sp"
        android:textStyle="italic" />



</LinearLayout>